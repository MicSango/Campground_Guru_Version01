<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="form-title">Edit Comment</h1>
		<div>
			<form class="my-form" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Update</button>
				</div>
				<p>
					<a href="/campgrounds">Go Back</a>
				</p>
			</form>
		</div>
	</div>
</div>

